# Environment Configuration
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/amp-email-db?retryWrites=true&w=majority

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# JWT Secret (for authentication if needed)
JWT_SECRET=your-super-secret-jwt-key-here

# AMP Configuration
AMP_CACHE_URL=https://cdn.ampproject.org
AMP_VALIDATOR_URL=https://validator.ampproject.org

# Application Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760

# Render Specific (these will be set automatically by Render)
# RENDER=true
# RENDER_SERVICE_ID=
# RENDER_SERVICE_NAME=
# RENDER_GIT_COMMIT=
# RENDER_GIT_BRANCH=
